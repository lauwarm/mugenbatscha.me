{
  "name": "mugenbatscha.me",
  "version": "1.0.0",
  "description": "Landing Page",
  "main": "index.js",
  "scripts": {
    "start": "npm run open",
    "open": "concurrently \"http-server -a localhost -p 1234\" \"open http://localhost:1234/build\"",
    "test": "echo \"Error: no test specified\" && exit 1",
    "postcss": "postcss --config postcss.json",
    "css:scss": "node-sass --output-style compressed -o dist src/scss",
    "css:autoprefixer": "postcss -u autoprefixer -r dist/*.css",
    "css:lint": "stylelint src/scss/*.scss  --custom-syntax postcss-scss",
    "build:css": "npm run css:lint && npm run css:scss && npm run css:autoprefixer",
    "watch:css": "onchange \"src/scss\" -- npm run build:css",
    "serve": "browser-sync start --server \"dist\" --files \"dist\"",
    "build:images": "imagemin src/images/**/* --out-dir=dist/images",
    "watch:images": "onchange \"src/images\" -- npm run build:images",
    "watch": "run-p serve watch:*",
    "build": "run-p build:*",
    "build:js": "webpack --mode=production",
    "watch:js": "onchange \"src/js\" -- webpack --mode=development",
    "build:html": "posthtml -c posthtml.json",
    "watch:html": "onchange \"src/views\" -- npm run build:html"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lauwarm/mugenbatscha.me.git"
  },
  "author": "lauwarm",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/lauwarm/mugenbatscha.me/issues"
  },
  "homepage": "https://github.com/lauwarm/mugenbatscha.me#readme",
  "dependencies": {
    "@babel/preset-env": "^7.18.2",
    "autoprefixer": "^10.4.7",
    "babel-loader": "^8.2.5",
    "browser-sync": "^2.27.10",
    "concurrently": "^7.2.1",
    "cssnano": "^5.1.10",
    "eslint": "^8.16.0",
    "eslint-webpack-plugin": "^3.1.1",
    "htmlnano": "^2.0.2",
    "http-server": "^14.1.0",
    "imagemin-cli": "^7.0.0",
    "node-sass": "^7.0.1",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "postcss": "^8.4.14",
    "postcss-cli": "^9.1.0",
    "postcss-extend": "^1.0.5",
    "postcss-import": "^14.1.0",
    "postcss-mixins": "^9.0.2",
    "postcss-nested": "^5.0.6",
    "postcss-scss": "^4.0.4",
    "postcss-simple-vars": "^6.0.3",
    "posthtml": "^0.16.6",
    "posthtml-cli": "^0.10.0",
    "posthtml-modules": "^0.9.0",
    "stylelint": "^14.8.5",
    "webpack": "^5.72.1",
    "webpack-cli": "^4.9.2"
  }
}
